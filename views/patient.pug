block content
  .container#patient_window(style='display: none')
    .card-spacer
    .card
      .card-body
        form
          .form-row
            .form-group.col#sectionId
              label.form-control-label(for='patientId') ID
              input#patientId.form-control-plaintext(type='text', name='displayId' readonly)
            .form-group.col#sectionPriority
              label.form-control-label(for='patientPriority') Priority
              select#patientPriority.form-control(name='priority')
                option(value='E' selected) E
                option(value='1') 1
                option(value='2') 2
                option(value='3') 3
                option(value='4') 4
          .form-group#sectionLocation
            label Location
            .spacer
              label.radio-inline.with-gap
                input(type='radio', name='location', value='road' checked)
                | Road
              label.radio-inline.with-gap
                input(type='radio', name='location', value='ER')
                | ER
          .form-group#sectionName
            label.form-control-label(for='patientName') Name
            input#patientName.form-control(type='text', name='name')
          .form-group#sectionDoB
            label(for='patientDoB') DoB
            input#patientDoB.form-control(type='date', name='dob')
          .form-group#sectionAge
            label(for='patientAge') Age
            input#patientAge.form-control(type='number', name='age' min='0', max='200')
          .form-group#sectionSex
            label Sex
            .spacer
              label.radio-inline.with-gap
                input(type='radio', name='sex', value='male')
                | Male
              label.radio-inline.with-gap
                input(type='radio', name='sex', value='female')
                | Female
              label.radio-inline.with-gap
                input(type='radio', name='sex', value='other')
                | Other
          .form-group#sectionConscious
            label Conscious
            .spacer
              label.radio-inline.with-gap
                input(type='radio', name='conscious', value='true')
                | Yes
              label.radio-inline.with-gap
                input(type='radio', name='conscious', value='false')
                | No
          .form-group#sectionBreathing
            label Breathing
            .spacer
              label.radio-inline.with-gap
                input(type='radio', name='breathing', value='true')
                | Yes
              label.radio-inline.with-gap
                input(type='radio', name='breathing', value='false')
                | No
          .form-group#sectionChiefComplaint
            label.form-control-label(for='patientChiefComplaint') Chief Complaint
            textarea#patientChiefComplaint.form-control(rows='3', name='chiefComplaint')
          .form-group#sectionCondition
            label.form-control-label(for='patientCondition') Condition
            select#patientCondition.form-control(name='condition')
              option(selected)
              option(value='allergy') Allergy
              option(value='asthma') Asthma
              option(value='bleeding') Bleeding
              option(value='broken-bone') Broken bone
              option(value='burn') Burn
              option(value='choking') Choking
              option(value='concussion') Concussion
              option(value='hear-attack') Hear Attack
              option(value='heat-stroke') Heat Stroke
              option(value='hypothermia') Hypothermia
              option(value='poisoning') Poisoning
              option(value='seizure') Seizure
              option(value='shock') Shock
              option(value='strain-sprain') Strain / Sprain
              option(value='stroke') Stroke
          .form-group#sectionDrugs
            label.form-control-label(for='patientDrags') Drugs
            textarea#patientDrags.form-control(rows='3', name='drags')
          .form-group#sectionAllergies
            label.form-control-label(for='patientAllergies') Allergies
            textarea#patientAllergies.form-control(rows='3', name='allergies')
          .p#sectionHospital
        button#patientPageFindHospitalBtn.btn.btn-primary.btn-raised Find Hospital
        button#patientPageFirstAidInstructionBtn.btn.btn-primary.btn-raised First Aid
        button#patientPageNurseDirectoryBtn.btn.btn-primary.btn-raised Nurses
