block content
  .container#groups_window(style='display: none')
    .container#group_directory
      .panel
        .card
          .card-body
            button#createNewGroup.btn.btn-primary.float-right(type='button') Create new Group
            h3.card-title Groups
            #ownedGroups.list-group
            #participantGroups.list-group

    .container#groups_manage(style='display: None')
      .panel
        form
          .card
            .card-body
              .form-group
                label(for='group_name') Group Name
                input#group_name.form-control(type='text')
              .form-group
                label(for='group_description') Description
                input#group_description.form-control(type='text')
              .form-group
                label(for='group_owner') Owner
                input#group_owner.form-control(type='text',readonly)
              .form-group
                label(for='participant_list') Participants:
                #participant_list.list-group
            .card-body
                button#cancelGroupInfo.btn.btn-primary.float-left(type='button') Cancel
                button#submitGroupInfo.btn.btn-primary.float-left(type='button') Submit
                button#deleteGroupInfo.btn.btn-danger.float-left(type='button') Delete
  #groupPageAlert.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
    .modal-dialog.short-modal(role='document')
      .modal-content
        .modal-header
          h5#groupAlertText.modal-title
        .modal-footer
          button.btn.btn-primary(type='button', id='groupPageAlertOKButton', data-dismiss='modal') OK
  #modalGroupChat.modal.fade(tabindex='-1', role='dialog', data-backdrop="static")
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h5.modal-title Group Chat with ?
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                #toID.page-hidden-info
                #toName.page-hidden-info
            .modal-body
                .container#group_chat_window
                    #groupHistoryMsg.col-12
            .modal-footer.justify-content-start
                button#privateShowSearchBtn.btn.btn-info.btn-raised.bmd-btn-fab.bmd-btn-fab-sm
                    i.material-icons.md-24.md-light search
                .row.group-input-row
                    .col-10
                        input#group_chat_content.form-control(placeholder="Input group message")
                    .col-1.btn-send
                        button#group_send_button.btn.btn-primary.bmd-btn-fab.bmd-btn-fab-sm
                            i.material-icons.md-24.md-light send
                .private-search-container.input-group(style="display: none;")
                    span#searchAddon.input-group-addon
                        i.material-icons.md-24 search
                    input#privateSearchInput.form-control(type="search" placeholder="search in this group chat" aria-describedby="searchAddon")
                    button#privateHideSearchBtn.btn
                        i.material-icons.md-24.md-grey expand_more
                    button#privateMoreBtn.btn.btn-primary.btn-raised.btn-sm(style="display: none;") +10

